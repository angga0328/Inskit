.row.set-row.margin-atas
  .col-md-8.bagian-kiri
    = image_tag(@hotel.foto, class: "img-responsive foto-hotel", style: "width: 880px; height: 280px;")
    .well.well-sm.well-hotel
      h2.nama-hotel
        .icon-office
          |  #{@hotel.nama}
  .col-md-4.bagian-kanan
    .embed-responsive.embed-responsive-4by3
      = render 'hotels/peta', hotel: @hotel
    = link_to "Ketahui lebih lanjut", "#{@hotel.website}", class: "btn btn-success pull-right", target: "_blank"
.row.set-row
  .col-md-6.box
    .panel.panel-default.panel-deskripsi
      .panel-heading.heading-panel Deskripsi dari #{@hotel.nama}
      .panel-body.text-justify
        |  #{@hotel.deskripsi}
        br
        button.btn.btn-success type="button" data-toggle="modal" data-target="#myModal" style="margin-bottom: 10px;"
          | Deskripsi Lengkap
          .glyphicon.glyphicon-book
        #myModal.modal.fade.modal-info tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
          .modal-dialog.modal-lg style="margin-top: 60px;"
            .modal-content  
              .panel.panel-default
                .panel-heading.full-deskripsi 
                  h3.panel-title style="font-weight: 800;"
                    | Deskripsi dari #{@hotel.nama}
                .panel-body.text-justify
                  = simple_format(@hotel.fulldeskripsi)
    .panel.panel-default.detail-info
      .panel-heading.detail-heading Detail Info
      .panel-body
        table.table
          tbody
            tr
              td Alamat
              td = @hotel.alamat
            tr
              td Harga dari
              td = @hotel.harga
            tr
              td Jumlah kamar
              td = @hotel.jumlahkamar
            tr
              td Telepon
              td 
                = @hotel.telp
                br    
  .col-md-6
    .panel.panel-default.panel-album-hotel
      .panel-heading.album-heading Foto dari hotel
      .panel-body
        - @hotel.albumfotohotels.each do |albumfotohotel|
          .col-md-3.kolom-foto-hotel
            a.hovereffect href=albumfotohotel.foto data-lightbox="image-1"
              =image_tag (albumfotohotel.foto), {:class => "img-responsive", style: "width:150px; height:100px;"} 
              .overlay
                p.info Lihat
    .panel.panel-default.panel-album-hotel
      .panel-heading.album-heading Tipe kamar dan harga
      .panel-body
        - @hotel.jenishotels.each do |jenishotel|
          .col-md-3.kolom-foto-hotel
            a.hovereffect href=jenishotel.foto data-lightbox="image-1"
              =image_tag (jenishotel.foto), {:class => "img-responsive", style: "width:150px; height:100px;"} 
              .overlay
                p.info Lihat



