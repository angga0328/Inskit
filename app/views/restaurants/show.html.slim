.row.set-row.margin-atas
  .col-md-8.bagian-kiri
    = image_tag(@restaurant.foto, class: "img-responsive foto-hotel", style: "width: 880px; height: 280px;")
    .well.well-sm.well-hotel
      h2.nama-hotel
        .icon-spoon-knife
          |  #{@restaurant.nama}
  .col-md-4.bagian-kanan
    .embed-responsive.embed-responsive-4by3
      = render 'restaurants/peta', restaurant: @restaurant
    = link_to "Find out more", "#{@restaurant.menu}", class: "btn btn-success pull-right", target: "_blank"
.row.set-row
  .col-md-6.box
    .panel.panel-default.panel-deskripsi
      .panel-heading.heading-panel Description of the #{@restaurant.nama}
      .panel-body.text-justify
        |  #{@restaurant.deskripsi}
    .panel.panel-default.detail-info
      .panel-heading.detail-heading Detail Info
      .panel-body
        table.table
          tbody
            tr
              td Address
              td = @restaurant.alamat
            tr
              td Opening hours
              td = @restaurant.jambuka
            tr
              td Price starting from 
              td = @restaurant.harga
            tr
              td Phone
              td 
                = @restaurant.telp
                br    
  .col-md-6
    .panel.panel-default.panel-album-hotel
      .panel-heading.album-heading Restaurant Menu
      .panel-body
        - @restaurant.menurestorans.each do |menurestoran|
          .col-md-3.kolom-foto-hotel
            a.hovereffect href=menurestoran.foto data-lightbox="image-1"
              =image_tag (menurestoran.foto), {:class => "img-responsive", style: "width:150px; height:100px;"} 
              .overlay
                p.info Show
    .panel.panel-default.panel-album-hotel
      .panel-heading.album-heading Photos of the Restaurant
      .panel-body
        - @restaurant.albumfotorestorans.each do |albumfotorestoran|
          .col-md-3.kolom-foto-hotel
            a.hovereffect href=albumfotorestoran.foto data-lightbox="image-1"
              =image_tag (albumfotorestoran.foto), {:class => "img-responsive", style: "width:150px; height:100px;"} 
              .overlay
                p.info Show



